<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSocialCenterImage"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:srcCompat="@drawable/home" />

        <EditText
            android:id="@+id/etSocialCenterUser"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_home_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Nombre del Centro Social"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <EditText
            android:id="@+id/etSocialCenterEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_email_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Correo Electr칩nico"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <EditText
            android:id="@+id/etSocialCenterPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_lock_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <EditText
            android:id="@+id/etSocialCenterConfirmPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_lock_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Confirmar Contrase침a"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <EditText
            android:id="@+id/etSocialCenterDir"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_location_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Calle"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <EditText
            android:id="@+id/etSocialCenterCol"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_location_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Colonia"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <EditText
            android:id="@+id/etSocialCenterCity"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_location_icon"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Ciudad"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <EditText
            android:id="@+id/etSocialCenterDescription"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Descripci칩n del Centro Social"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="7"
            android:maxLines="10"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:scrollbars="vertical"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btSocialCenterRegister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="64dp"
            android:width="140dp"
            android:backgroundTint="#3F51B5"
            android:text="Registrarse"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>